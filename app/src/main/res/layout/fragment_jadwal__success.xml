<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Jadwal_SuccessFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat, pendaftaran berhasil!"
        android:textAlignment="center"
        android:textSize="10pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="32dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/ttnorms_regular"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMOR ANTRIAN ANDA"
                android:layout_gravity="center"
                android:textSize="7pt"
                android:textColor="@android:color/black"
                android:fontFamily="@font/ttnorms_regular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:layout_gravity="center"
                android:textSize="36pt"
                android:textColor="@android:color/black"
                android:fontFamily="@font/ttnorms_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antrian ini dibuat pada 12/10/2020 20.05 WIB "
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:fontFamily="@font/ttnorms_regular"
                android:id="@+id/timestamp_pembuatan"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perkiraan waktu konsultasi :"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/ttnorms_bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="13 Oktober 2020 14.00"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/ttnorms_regular"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mohon datang ke klinik kami maksimal 15 menit sebelum perkiraan waktu periksa."
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/ttnorms_regular"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Silahkan screenshot layar ini sebagai bukti pendaftaran."
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/ttnorms_regular"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:padding="12dp"
        android:text="Kembali ke Dashboard"
        android:id="@+id/btn_success_back_to_home"/>

</LinearLayout>