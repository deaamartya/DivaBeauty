<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/card_atas"
                android:background="@drawable/rectangle_radius"
                android:backgroundTint="@color/colorPrimaryDark"
                android:orientation="horizontal"
                android:paddingTop="32dp"
                android:paddingHorizontal="16dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginStart="32dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome"
                        android:id="@+id/txt_home_card_atas"
                        android:fontFamily="@font/ttnorms_regular"
                        android:textSize="10pt"
                        android:textColor="@android:color/white"
                        />

                    <TextView
                        android:layout_marginStart="32dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nama_user"
                        android:id="@+id/txt_home_nama"
                        android:fontFamily="@font/ttnorms_bold"
                        android:layout_marginTop="2dp"
                        android:textSize="12pt"
                        android:textColor="@android:color/white"
                        />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toBottomOf="@+id/card_atas"
                app:cardBackgroundColor="#213968"
                android:id="@+id/card_pemeriksaan"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/jadwalkan"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@android:color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/konsultasi_dengan_dokter"
                            android:textSize="8pt"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/calendar"
                        android:layout_gravity="end"
                        android:layout_marginStart="26dp"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dokter_tersedia"
                android:id="@+id/text_pilihan_dokter"
                app:layout_constraintTop_toBottomOf="@id/card_pemeriksaan"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/ttnorms_bold"
                android:textColor="@android:color/black"
                android:textSize="9pt"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_pilihan_dokter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:id="@+id/recyler_view_dokter"
                tools:listitem="@layout/card_dokter"
                android:scrollbars="vertical"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="32dp"
                app:layout_constraintTop_toBottomOf="@+id/recyler_view_dokter"
                app:strokeWidth="1dp"
                app:strokeColor="@color/stroke_color"
                app:cardElevation="0dp"
                android:id="@+id/card_riwayat"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="90dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="64dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lihat"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@android:color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Riwayat Konsultasi"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="@android:color/black"
                            android:textSize="8pt"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="Card Logo"
                        android:layout_gravity="end"
                        android:src="@drawable/history"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled" />
</FrameLayout>
