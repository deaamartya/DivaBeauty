<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    android:padding="8dp"
    app:cardElevation="5dp"
    android:layout_margin="16dp"
    android:state_checked="true"
    app:checkedIcon="@drawable/ic_baseline_check_24"
    app:cardCornerRadius="15dp"
    app:checkedIconTint="@color/colorPrimary"
    android:id="@+id/card_jadwal_dokter">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">
            <ImageView
                android:id="@+id/foto_dokter_jadwal"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/nama_dokter_jadwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Nama dokter coba aja kooooooooook"
                android:textColor="@android:color/black"
                android:fontFamily="@font/ttnorms_bold"
                android:textSize="8pt"/>
        </LinearLayout>
</com.google.android.material.card.MaterialCardView>